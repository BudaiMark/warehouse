<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
        version="2.5"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
<display-name>Hello Word</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

   <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>hu.neuron.webapp.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login-async</servlet-name>
        <servlet-class>hu.neuron.webapp.servlet.LoginServletAsync</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-async</servlet-name>
        <url-pattern>/login-async</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>hu.neuron.webapp.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>hu.neuron.webapp.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/api/ProductService/getProducts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>asyncProducts</servlet-name>
        <servlet-class>hu.neuron.webapp.servlet.ProductAsyncServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>asyncProducts</servlet-name>
        <url-pattern>/api/ProductService/getAsyncProducts</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>hu.neuron.webapp.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <servlet-name>dashboard</servlet-name>
    </filter-mapping>


</web-app>